
    <div class="row m-4">
        <% if (session) { %>
            <h3>id: <%= session?.user.id %></h3>
            <h3>username: <%= session?.user.username %></h3>
        <% } %>

        <div class="col-8">
            <a href="/create" class="btn btn-success m-1">
                Crea
            </a>
            <% if (!session) { %>
                <a href="/login" class="btn btn-primary m-1">
                    Login
                </a>
            <% } else { %>
                <a href="/logout" class="btn btn-primary m-1">
                    Logout
                </a>
            <% } %>



            <ul class="list-group">
                <% for(let t of todos) { %>
                    <li class="list-group-item">
                        <% if (t.done) { %>
                            <span class="completed">
                                <%= t.label %>
                            </span>
                        <% } else { %>
                            <span>
                                <%= t.label %>
                            </span>
                        <% } %>
                        <span>
                            <a href="/?done=<%= t.id %>" class="btn btn-primary">
                                <i class="fa fa-check"></i>
                            </a>
                            <a href="/edit?id=<%= t.id %>" class="btn btn-success">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="/?delete=<%= t.id %>" class="btn btn-danger">
                                <i class="fa fa-trash"></i>
                            </a>
                        </span>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
